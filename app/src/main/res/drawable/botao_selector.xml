<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#a6a259"
                android:centerColor="#c9c79b"
                android:endColor="#a6a259"
                android:angle="180"/>
            <stroke
                android:width="1dp"
                android:color="#a6a259" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#c9c79b"
                android:centerColor="#e4e2ce"
                android:endColor="#c9c79b"
                android:angle="180"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#c9c79b" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <!-- c9c79b -->
        </shape>
    </item>
</selector>